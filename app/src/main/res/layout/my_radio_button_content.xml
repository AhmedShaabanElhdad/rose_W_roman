<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_230sdp"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:layout_gravity="right"
    android:paddingLeft="@dimen/_5sdp"
    android:paddingRight="@dimen/_5sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_marginTop="@dimen/_15sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_address_name"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/neo_sans_medium"
        android:text="address_name"
        android:textSize="@dimen/_12sdp"
        android:textAlignment="viewStart"
        android:drawableStart="@drawable/ic_location_on_24"
        android:drawableTint="@color/blueDark"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txt_address_details"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_20sdp"
        android:fontFamily="@font/neo_sans_medium"
        android:textSize="@dimen/_11sdp"
        android:textAlignment="viewStart"
        android:text="address_name"
        android:drawableTint="@color/blueDark" />


</LinearLayout>